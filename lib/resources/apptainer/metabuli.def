Bootstrap: docker
From: debian:bookworm-slim

%files
    metabuli-dev /usr/local/bin/metabuli

%post
    set -eux
    apt-get update
    apt-get install -y --no-install-recommends libatomic1
    rm -rf /var/lib/apt/lists/*
    chmod 0755 /usr/local/bin/metabuli

%environment
    export PATH="/usr/local/bin:$PATH"

%runscript
    exec metabuli "$@"